<%= form_tag("/products/add", method: :post) do %>
    <%= label_tag "product" %>
    <%= text_field_tag "product" %>
    <%= submit_tag "add to cart"%>
<% end %>

<section>
    <ul>
        <label>Your Cart:</label>
        <% cart.each do |item| %>
            <li><%= item %></li>
        <% end %>
    </ul>
</section>